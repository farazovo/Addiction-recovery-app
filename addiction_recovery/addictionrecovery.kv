<ProfileScreen>:

    person_name:person_name
    weight:weight
    person_height:person_height
    birth:birth

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Enter your Name:"
            TextInput:
                id: person_name
                multiline:False

            Label:
                text: "Enter your Weight(kg):"
            TextInput:
                id: weight
                multiline:False

            Label:
                text: "Enter your Height(cm):"
            TextInput:
                id: person_height
                multiline:False

            Label:
                text: "Enter your Date of Birth in (year, month, day) format:"
            TextInput:
                id: birth
                multiline:False

            Button:
                text: "Return to Menu"
                on_press: root.manager.current = 'menu'
            Button:
                text: "Submit"
                on_press: root.Submit()


<LoggingScreen>:

    substance:substance
    amount:amount
    cost:cost
    specific_name:specific_name

    GridLayout:
        cols:1

        size: root.width, root.height

        Label:
            text: "Please enter your intake below:"

        GridLayout:
            cols:2

            GridLayout:
                cols:1
                size: root.width, root.height

                GridLayout:
                    cols:2

                    Label:
                        text: "Select the Substance:"
                    Spinner:
                        id:substance
                        text: "Choose Substance"
                        values: ["Alcohol","Coffee"]
                        on_text: root.spinner_clicked(substance.text)

                    Label:
                        text: "Enter the amount taken:"
                    TextInput:
                        id: amount
                        multiline:False

                    Label:
                        text: "Enter how much it cost:"
                    TextInput:
                        id: cost
                        multiline:False

                    Label:
                        text: "Enter the specific type (if any):"
                    TextInput:
                        id: specific_name
                        multiline:False

        GridLayout:
            cols:2

            Label:
                text: "Presets:"


            GridLayout:
                cols:2

                Button:
                    text: "Preset 1"
                    on_press: root.manager.current = 'menu'
                Button:
                    text: "Preset 2"
                    on_press: root.manager.current = 'menu'
                Button:
                    text: "Preset 3"
                    on_press: root.manager.current = 'menu'
                Button:
                    text: "Preset 4"
                    on_press: root.manager.current = 'menu'

        #SubstancePresets:
        #    rows: 1
        #    cols: 3

        GridLayout:
            cols:2

            Button:
                text: "Return to Menu"
                on_press: root.manager.current = 'menu'

            Button:
                text: "Submit"
                on_press: root.Submit()

<GraphScreen>:
    GridLayout:
        cols:1

        Label:
            text: "Graph"

        Button:
            text: "Return to Menu"
            on_press: root.manager.current = 'menu'

<MenuScreen>:
    GridLayout:
        cols:1

        Label:
            text: "Welcome to our Addiction Recovery App"


        Button:
            text: "Profile"
            on_press: root.manager.current = 'profile'


        Button:
            text: "Logging"
            on_press: root.manager.current = 'logging'


        Button:
            text: "Graphs"
            on_press: root.manager.current = 'graph'

        Button:
            text: "Exit App"
            on_press: app.stop()
